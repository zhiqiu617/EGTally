/* components/content/userProfile/UserProfile.wxss */
/* 第一种视图（上下分布） */
.user-profile {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 20rpx auto;
  height: 36%;
}
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-avatar {
  margin: 30rpx 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: #efefef 2rpx solid;
}

/* 第二种视图（左右分布） */
.user-info-view2 {
  display: flex;
  padding: 20rpx 0;
  align-items: center;
}
.user-avatar-view2 {
  display: block;
  margin: 20rpx 40rpx 20rpx 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: #efefef 2rpx solid;
}
.user-info-text {
  display: flex;
  flex-direction: column;
}
.user-info-name {
  margin-bottom: 16rpx;
  font-size: 36rpx;
}
.user-info-date {
  color: #6d6d6d;
  font-size: 28rpx;
}